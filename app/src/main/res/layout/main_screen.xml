<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/banner_img" />

        <Button
            android:id="@+id/btn_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_below="@id/image"
            android:text="@string/text_card" />

        <Button
            android:id="@+id/btn_speech_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_below="@id/btn_card"
            android:text="@string/text_card" />

        <Button
            android:id="@+id/btn_word_listing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_below="@id/btn_speech_word"
            android:text="@string/text_card" />

        <Button
            android:id="@+id/btn_search_pair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_below="@id/btn_word_listing"
            android:text="@string/text_card" />

        <Button
            android:id="@+id/btn_construct_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_below="@id/btn_search_pair"
            android:text="@string/text_card" />

        <Button
            android:id="@+id/btn_true_false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_below="@id/btn_construct_word"
            android:text="@string/text_card" />

        <Button
            android:id="@+id/btn_select_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_below="@id/btn_true_false"
            android:text="@string/text_card" />

        <Button
            android:id="@+id/btn_translate_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_below="@id/btn_select_translate"
            android:text="@string/text_card" />


        <include layout="@layout/speed_training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_translate_image"
            android:layout_marginLeft="61dp"
            android:layout_marginRight="60dp"
            android:id="@+id/include" />

        <include layout="@layout/speed_training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="132dp"
            android:layout_marginLeft="61dp"
            android:layout_marginRight="60dp"
            />


    </RelativeLayout>

</ScrollView>
